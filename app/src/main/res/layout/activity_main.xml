<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background1"
        app:srcCompat="@drawable/background1"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp" />
        <ImageView
            android:id="@+id/newImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon"
            android:contentDescription="New Image"
            tools:ignore="HardcodedText" />


        <!-- Title Image -->

        <TextView
            android:id="@+id/titleText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/lindenhill"
            android:letterSpacing="0.0"
            android:text="Online"
            android:textColor="#000000"
            android:textSize="45sp"
            android:gravity="center"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/titleText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/lindenhill"
            android:letterSpacing="0.0"
            android:text="NoteBook"
            android:textColor="#000000"
            android:textSize="45sp"
            android:gravity="center"
            tools:ignore="HardcodedText" />

        <!-- Sign In Button -->

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:backgroundTint="#A19F91C2"
            android:fontFamily="@font/caveat"
            android:text="sign in"
            android:textColor="#000"
            android:textSize="25sp"
            tools:ignore="HardcodedText" /> <!-- دسترسی‌پذیری -->

        <!-- Sign Up Button -->

        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#D8C7ED"
            android:fontFamily="@font/caveat"
            android:text="sign up"
            android:textColor="#000"
            android:textSize="25sp"
            tools:ignore="HardcodedText" /> <!-- دسترسی‌پذیری -->

    </LinearLayout>

</RelativeLayout>